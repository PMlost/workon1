<!-- Profile Page Content -->
<div class="container mt-5">
  <div class="row">
    <!-- Sidebar with My Orders and Manage Address -->
    <div class="col-md-4">
      <div class="card">
        <div class="list-group">
          <a
            href="/users/profile"
            class="list-group-item list-group-item-action card-header bg-success text-white"
            >My Profile</a
          >
          <a
            <a
            href="/users/order-details"
            class="list-group-item list-group-item-action"
            >My Orders</a
          >
          <a
            href="/users/manageAddress"
            class="list-group-item list-group-item-action"
            >Manage Address</a
          >
          <a
            href="/users/viewAddress"
            class="list-group-item list-group-item-action"
            >View Address</a
          >
          <a
            href="/users/change-password"
            class="list-group-item list-group-item-action"
            >change PassworD</a
          >
        </div>
      </div>
    </div>

    <!-- Main Content for My Orders or Manage Address -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-success text-white">Profile Details</div>
        <div class="card-body">
          <div class="mb-3 row">
            <label for="staticName" class="col-sm-3 col-form-label"
              >Name:</label
            >
            <div class="col-sm-9">
              <span class="font-weight-bold"><%= userDetail.name %></span>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-3 col-form-label"
              >Email:</label
            >
            <div class="col-sm-9">
              <span><%= userDetail.email %></span>
            </div>
          </div>

          <div class="mb-3 row">
            <label for="staticMobile" class="col-sm-3 col-form-label"
              >Mobile:</label
            >
            <div class="col-sm-9">
              <span><%= userDetail.mobile %></span>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <a href="/users/edit-profile" class="btn btn-success"
              >Edit Profile</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
