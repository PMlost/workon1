<div class="container-fluid">
  <div class="container">
    <!-- Title -->
    <div class="d-flex justify-content-between align-items-center py-3">
      <h2 style="color: #333" class="h5 mb-0">
        <a href="#"></a> <%=orderDetail._id%>
      </h2>
    </div>

    <!-- Main content -->
    <div class="row">
      <div class="col-lg-12">
        <!-- Details -->
        <div
          style="background-color: #f5f5f5; border-radius: 30px"
          class="card mb-4"
        >
          <div class="card-body">
            <div class="mb-3 d-flex justify-content-between">
              <div>
                <span style="color: #333" class="me-3">
                  <%=orderDetail.createdAt.toDateString()%></span
                >
                <span
                  style="background-color: green"
                  class="badge rounded-pill"
                >
                  <%=orderDetail.status%></span
                >
              </div>
              <div class="d-flex">
                <div class="dropdown">
                  <button
                    class="btn btn-link p-0 text-muted"
                    type="button"
                    data-bs-toggle="dropdown"
                  >
                    <i class="bi bi-three-dots-vertical"></i>
                  </button>
                </div>
              </div>
            </div>
            <table style="color: #333" class="table table-borderless">
              <% for (const productObj of orderDetail.products.item) {%>

              <tbody>
                <tr>
                  <td>
                    <div class="d-flex mb-2">
                      <div class="flex-shrink-0">
                        <img
                          src="<%= productObj.productId.imgSrc[0] %>"
                          alt=""
                          width="70"
                          class="img-fluid rounded"
                        />
                      </div>
                      <div class="flex-lg-grow-1 ms-3">
                        <h5 class="mb-0 text-uppercase">
                          <%= productObj.productId.name %>
                        </h5>
                      </div>
                    </div>
                  </td>
                  <td>Quantity: <%= productObj.quantity %></td>
                  <td class="text-end">₹<%= productObj.price %></td>
                </tr>
                <%} %>
              </tbody>
              <tfoot>
                <tr class="fw-bold">
                  <td></td>
                  <td></td>
                  <td class="text-end h4">
                    <span class="h6">TOTAL : </span>
                    ₹<%=orderDetail.payment.amount%>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
        <!-- Payment -->
        <div
          style="background-color: #f5f5f5; border-radius: 30px; color: #333"
          class="card mb-4"
        >
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <p><strong class="h4">Payment Status</strong></p>
                <p>
                  <%=orderDetail.payment.method%> <br />
                  Total: <%=orderDetail.payment.amount%>
                </p>
                <p><strong class="h4">Payment Details</strong></p>
                Receipt No: <span style="color: #b79dcd">123</span> <br />
                Delivery Status:
                <span style="color: #08ab08"><%= orderDetail.status %></span>
                <br />
                Created At:<%= orderDetail.createdAt.toDateString()%> <br />
              </div>
              <div class="col-lg-6">
                <h3 class="h3">Billing address</h3>
                <address>
                  <strong> <%=orderDetail.address.firstname%></strong><br />
                  <%=orderDetail.address.lastname%><br />
                  Pin:<%=orderDetail.address.zipcode%><br />
                  Phone: <%=orderDetail.address.mobileN%><br />
                </address>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
